<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtBG"
        android:layout_width="388dp"
        android:layout_height="92dp"
        android:background="@color/white"
        android:fontFamily="@font/annie_use_your_telescope"
        android:text="Hello World!"
        android:textAlignment="center"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/btnDecision1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Decision 1"
        android:backgroundTint="#141313"
        android:textAlignment="center"
        android:fontFamily="@font/annie_use_your_telescope"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnDecision2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBG" />

    <Button
        android:id="@+id/btnDecision2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DECISION 2"
        android:backgroundTint="#141313"
        android:textAlignment="center"
        android:fontFamily="@font/annie_use_your_telescope"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnDecision1"
        app:layout_constraintTop_toTopOf="@+id/btnDecision1" />

    <TextView
        android:id="@+id/txtAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="TextView"
        android:background="@color/white"
        android:fontFamily="@font/annie_use_your_telescope"
        android:textStyle="italic|bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDecision1" />

</androidx.constraintlayout.widget.ConstraintLayout>